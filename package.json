{
  "name": "chess",
  "version": "1.0.0",
  "description": "A minimalist chess web application built with modern web technologies. This app provides a fully functional chess game with standard rules enforcement that can be played locally by two players.",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint eslint.config.js postcss.config.js tailwind.config.js vite.config.ts vitest.config.ts src --ext ts,tsx,js --report-unused-disable-directives",
    "lint:fix": "eslint eslint.config.js postcss.config.js tailwind.config.js vite.config.ts vitest.config.ts src --ext ts,tsx,js --fix",
    "format": "prettier --write \"*.{js,ts,tsx,scss,css,json}\" \"src/**/*.{ts,tsx,scss,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "check:all": "npm run lint && npm run format && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vakac995/chess.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/vakac995/chess/issues"
  },
  "homepage": "https://github.com/vakac995/chess#readme",
  "dependencies": {
    "@hookform/resolvers": "^5.0.1",
    "chess.js": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "jotai": "^2.12.3",
    "react": "^19.1.0",
    "react-chessboard": "^4.7.3",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.4",
    "@tailwindcss/vite": "^4.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.12",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vitejs/plugin-react": "^4.4.0",
    "@vitest/coverage-v8": "^3.1.1",
    "@vitest/ui": "^3.1.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass": "^1.86.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  }
}
